.zUploader
	display block
	min-height 150px
	border 2px dashed #ddd 
	padding 15px 15px 15px
	margin 15px 0
	background-color #fafafa
	box-shadow inset 0 3px 6px rgba(0, 0, 0, .05)
	border-color #e5e5e5 #eee #eee
	border-style solid
	border-width 1px 0
	max-width 100%
	overflow-x auto
.zUploader *
	box-sizing
.zUploaderList
	margin 0 20px 20px 20px
	padding 20px 20px 0 20px
	clear both
.zUploaderNoFile
	padding 50px 30px
	border 3px dashed #e6e6e6
	text-align center
	color #bbb
	.icon 
		margin-bottom 50px
	.icon-images
		font-size 70px
		color #999
		background #fff
		padding 20px
		
		
.zUploaderFileBtn
	position relative
	display inline-block
	margin-bottom 20px
	vertical-align top
	cursor pointer
	.zUploaderBtnText
		background #5bc0de
		color #fff
		display block
		padding 10px 20px
		border-radius 3px
		border 1px solid #eee 
		height 42px
		line-height 22px
	input
		position absolute
		top 0
		left 0
		opacity 0
		z-index 2
		height 100%
		width 100%
		display block
		cursor pointer
	&:hover .zUploaderBtnText
		background #46b8da
.zUploaderBtn
	padding 10px 21px 
	border 1px solid #eee 
	background #5bc0de
	border-radius 3px
	color #fff
	height 42px
	&:hover 
		background #46b8da
		border 1px solid #eee 
	

.zUploaderItem
	display inline-block
	width 110px 
	height 110px 
	border 1px solid #ddd
	margin-right 20px
	position relative
	vertical-align top
	margin-bottom 60px
	.icon
		width 110px 
		height 110px
		border 1px 
		img
			display block
			width 100%
			height 100%
		i 
			display block
			font-size 60px
			color #aaa
			text-align center
			padding-top 24px
		
	&:hover .zUploaderItemHd
		height 22px
.zUploaderMsg
	display block
	position absolute
	top 90px
	height 20px 
	line-height 20px 
	color #fff 
	right 0
	left 0
	margin 0
	font-size 13px
	text-align center
.zUploaderMsg.ok
	background #5cb85c
.zUploaderMsg.error
	background #d9534f
.zUploaderItemHd
	width 100%
	background rgba(100,100,100,.7)
	height 0
	overflow hidden
	position absolute
	top 0
	color #fff 
	transition all .5s
	i 
		font-size 12px 
		cursor pointer
		position absolute
		right 0
		top 0
		padding 5px
.zUploaderName
	margin 0
	line-height 1 
	text-align center
	font-size 12px 
	color #666
	margin-top 5px
	word-break break-all
.zUploaderFoot
	position relative
	color #999
	margin 0
	padding 0 20px
	font-size 14px
	border-top 1px solid #ddd
	height 50px
	padding-top 15px
	p 
		top 0.5em
		position relative
.zUploaderControl
	position absolute 
	right 20px
	top 10px
	.zUploaderBtnText
		border 1px solid #ccc
		background #fff 
		color #666
	.zUploaderFileBtn 
		margin-right 20px
		&:hover .zUploaderBtnText
			background #eaeaea

.zUploaderProcess
	overflow visible
	display inline-block
	width 150px 
	height 20px 
	background #ddd
	box-shadow inset 0 2px 5px #aaa
	border 1px solid #aaa
	border-radius 8px
	vertical-align middle
	margin-right 20px
	.zUploaderProcessInner 
		background -webkit-gradient(linear,0% 0%, 0% 100%, from(#A2E369), to(#A2E369), color-stop(0.5,#72C83F))
		background gradient(linear,0% 0%, 0% 100%, from(#A2E369), to(#A2E369), color-stop(0.5,#72C83F))
		background -moz-gradient(linear,0% 0%, 0% 100%, from(#A2E369), to(#A2E369), color-stop(0.5,#72C83F))
		display block
		width 10%
		height 100%
		border-radius 8px
		
		
	