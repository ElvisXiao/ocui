.zSideBar
    background-color #efefef
    padding 0
    border 1px solid #ddd
    border-top 4px solid #3498db
    display inline-block
    ul
        padding 0
        li.active
            background #3498db
            a 
                color #fff
            ul li a 
                color #444
        li 
            list-style-type none
            cursor pointer
            min-width 130px
            line-height 40px
            line-height 40px
            position relative
            white-space nowrap
            transition all 0.3s
            -moz-transition all 0.3s
            -webkit-transition all 0.3s
            -o-transition all 0.3s
            border-bottom 1px solid #fff
            list-style-type none
            a 
                text-decoration none
                color #666
                display block
                width 120%
                height 100%
                padding 0 10px
            &:hover
                background-color #3498db
                >a 
                    color #fff
                
    li:last-child
        border-bottom 1px solid transparent
    li.hasMore 
        ul 
            position absolute
            top -15px
            left 100%
            margin-left 15px
            background-color #eceff1
            padding 10px 20px
            border-radius 10px
            -moz-border-radius 10px
            -webkit-bordder-radius 10px
            -o-user-select 10px
            transition all 0.4s
            -moz-transition all 0.4s
            display none
            box-shadow 0 0 3px #bbb
            &:before
                content ""
                border-right 10px solid #eceff1
                border-left 10px solid transparent
                border-bottom 10px solid transparent
                border-top 10px solid transparent
                display block
                position absolute
                left -20px
                top 25px
            li 
              font-size 12px
              height 30px
              line-height 30px
              min-width 150px
              &:hover
                  border-bottom 1px solid #0072C0 !important
                  background #eceff1
                  >a 
                      color #0072C0
            li:last-child 
                border-bottom 0
        &:hover
            ul
                display block
        a:hover +ul
            display block

                


    