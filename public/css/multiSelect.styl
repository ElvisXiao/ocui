textarea.disable 
    resize none
    border 0
.zCbx 
    position relative
    input 
        opacity 0
    &:before 
        font-family 'icomoon'
        content "\e60d"
        font-size 1.2em
        color #d8d8d8
        position: absolute
        left 0.2em
        top 5px
.zCbx.active:before 
    content "\e60c"
    color #3498db

.zMultiSelect
    display inline-block
    position relative
    vertical-align middle
    border-radius 3px
    .zMultiSelectMain 
        position absolute
        left 0
        background-color: #fff
        border 1px solid #d8d8d8
        width 100%
        display none
        z-index 1000
        padding-bottom 30px
        &:before
            content ""
            display block
            width 100%
            height 30px
            position absolute
            bottom 0
            left 0
            background #eee
        ul 
            max-height 160px
            overflow-y auto
            margin-top 0.5em
            padding-left 0
            li
                list-style none
                color #444
                font-size 12px
                font-weight 400
            label 
                display block
                width 100%
                margin 0
                padding 5px 1em 5px 1em
                &:hover
                    background-color #eee
                &:before
                    left 0.5em
                input 
                    margin-right 5px
        button 
            position absolute
            right 1em
            bottom .2em
    .zMultiSelectText 
        padding-left 0.8em
        border 1px solid #d8d8d8
        width 100%
        cursor pointer
        height 32px
        line-height 32px
        overflow hidden
        border-radius 3px
        &:before 
            font-family 'icomoon'
            content "\f05b"
            position absolute
            right 1px
            top 1px
            bottom 1px
            font-size 1.5em
            cursor pointer
            padding-right .5em
            padding-left .3em
            background #fff
            color #666

.zMultiSelectDiv.active 
    .zMutiSelectText 
        background-color #d8d8d8
        border 1px dotted #d8d8d8
        border-radius 3px
        &:before
            background #d8d8d8
