textarea.disable 
    resize: none;
    border: 0;


.zCbx 
    position: relative;

.zCbx input 
    opacity 0


.zCbx:before 
    font-family: 'icomoon';
    content: "\e60d";
    font-size: 1.2em;
    color: #d8d8d8;
    position: absolute;
    left: 0.2em;
    top: 0;


.zMutiSelect
    min-height:32px;
    display:inline-block;


.zCbx.active:before 
    content: "\e60c";
    color: #3498db;

.zMutiSelectDiv.active .zMutiSelectText 
    background-color: #d8d8d8;
    border: 1px dotted #d8d8d8;
    border-radius 3px

.zMutiSelectDiv 
    position: relative;
    display: inline-block;
    vertical-align: middle;
    border-radius: 3px;

.zMutiSelectDiv .zMutiSelectMain 
    position: absolute;
    left: 0;
    background-color: #fff;
    border: 1px solid #d8d8d8;
    width: 100%;
    display: none;
    z-index: 1000;
    padding-bottom:30px;
    &:before
        content ""
        display block
        width 100%
        height 30px
        position absolute
        bottom 0
        left 0
        background #eee

.zMutiSelectDiv .zMutiSelectMain ul 
    max-height: 160px;
    overflow-y: auto;
    margin-top: 0.5em;
    padding-left:0;

.zMutiSelectDiv .zMutiSelectMain ul li
    list-style: none;
    color:#888;
    font-size:12px;

.zMutiSelectDiv .zMutiSelectMain ul label 
    display: block;
    width: 100%;
    height: 2em;
    line-height: 2em;
    padding-left: 1em;


.zMutiSelectDiv .zMutiSelectMain ul label input 
    margin-right: 5px;


.zMutiSelectDiv .zMutiSelectMain ul label:hover 
    background-color: #eee;


.zMutiSelectDiv .zMutiSelectMain ul label:before 
    left: 0.5em;


.zMutiSelectDiv .zMutiSelectMain button 
    position:absolute;
    right:1em;
    bottom:.2em;


.zMutiSelectDiv .zMutiSelectText 
    padding-left: 0.8em;
    border: 1px solid #d8d8d8;
    width: 100%;
    cursor: pointer;
    height:32px;
    line-height:32px;
    overflow:hidden;
    border-radius 3px

.zMutiSelectDiv .zMutiSelectText:before 
    font-family: 'icomoon';
    content: "\f05b";
    position: absolute;
    right: 1px;
    top:1px;
    bottom:1px;
    font-size: 1.5em;
    cursor: pointer;
    padding-right:.5em;
    padding-left: .3em;
    background:#fff;
    color: #666;

.zMutiSelectDiv.active .zMutiSelectText:before
    background:#d8d8d8;
