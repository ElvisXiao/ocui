.zTree
    position relative
    list-style-type none
    >.zTreeItem
        >p
            .icon-minus2, .icon-cog
                display none
        &:before
            border-top 0 !important
    ul
        position relative
        margin-left 20px
        list-style-type none
        display none
        padding 0
        &:before
            content ''
            display block
            width 1px 
            position absolute
            top 0
            bottom -10px
            left 0
            border-left 1px solid #46b8da
    
    .zTreeItem.hasMore
        >p
            &:before
                display block
                width 0
                height 0
                content ''
                border-top 6px solid #46b8da
                border-left 6px solid transparent
                border-right 6px solid transparent
                border-bottom 6px solid transparent
                position absolute
                top 50%
                margin-top -3px
                left 5px
    
    .zTreeItem.zTreeItemDes>p
        &:after
            content ""
            width 0
            height 0
            border-top 12px solid #46b8da
            border-left 12px solid transparent
            border-right 0
            border-bottom 12px solid transparent
            position absolute
            top 0
            right 0
            
    .zTreeItem
        position relative
        padding-left 40px
        padding-top 10px
        &:before
            content ""
            display block
            border-top 1px solid #46b8da
            width 40px
            position absolute
            left 0
            margin-top 15px
        >p  
            position relative
            line-height 30px
            border 1px solid #46b8da
            color #1b809e
            border-radius 3px
            white-space nowrap
            padding-left 20px
            padding-right 30px
            display inline-block
            cursor pointer
            margin 0
            overflow visible
            input
                border 0
                height 30px
                margin 0
                width 100px
                border-radius 0 
                border-left 1px solid #46b8da
                padding-left 5px
                &:focus
                    outline none
            input[name="description"]
                width 300px 
            .iconRight
                position absolute
                right 7px 
                color #fff
                top 7px
            .zLoadingIcon
                right 2px
                top 3px
            &:hover
                background #46b8da
                color #fff
                &:before
                    border-top 6px solid #fff
                &:after
                    border-top 12px solid #fff
                .zTreeControl
                    color #1b809e
            .zTreeControl
                position absolute
                left 100%
                padding-left 50px
                padding-top 5px
                display block
                color #1b809e
                height 32px
                top 0
                line-height 32px
                i 
                    margin 0 5px
                    font-size 16px
                    
        >p.zTreeEdit
            background #46b8da
            &:before
                border-top 6px solid #fff
            &:after
                display none
            .icon-plus2, .icon-cog
                display none

    .zTreeItem.active>ul
        display block