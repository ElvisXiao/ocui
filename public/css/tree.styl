@import './params'


@keyframes treeTag
    0%   {background:#d43f3a; color: #fff;}
    100% {background:#fff; color: #1b809e;}
@-webkit-keyframes treeTag
    0%   {background:#d43f3a; color: #fff;}
    100% {background:#fff; color: #1b809e;}
@-moz-keyframes treeTag
    0%   {background:#d43f3a; color: #fff;}
    100% {background:#fff; color: #1b809e;}
@-o-keyframes treeTag
    0%   {background:#d43f3a; color: #fff;}
    100% {background:#fff; color: #1b809e;}
@-ms-keyframes treeTag
    0%   {background:#d43f3a; color: #fff;}
    100% {background:#fff; color: #1b809e;}


.zTree
    position relative
    list-style-type none
    >.zTreeItem
        >p
            .icon-minus2, .icon-cog
                display none
        &:before
            border-top 0 !important
    ul
        position relative
        margin-left 20px
        list-style-type none
        display none
        padding 0
        &:before
            content ''
            display block
            width 1px 
            position absolute
            top 0
            bottom 16px
            left 0
            border-left 1px solid #46b8da
        &:after
            content ''
            display block
            width 60px
            height 1px  
            position absolute
            bottom 16px
            left 0
            border-bottom 1px solid #46b8da
    
    .zTreeItem.hasMore
        >p
            &:before
                display block
                width 0
                height 0
                content ''
                border-top 6px solid #46b8da
                border-left 6px solid transparent
                border-right 6px solid transparent
                border-bottom 6px solid transparent
                position absolute
                top 50%
                margin-top -3px
                left 5px
    
    .zTreeItem.zTreeItemDes>p
        &:after
            content ""
            width 0
            height 0
            border-top 12px solid #46b8da
            border-left 12px solid transparent
            border-right 0
            border-bottom 12px solid transparent
            position absolute
            top 0
            right 0
            
    .zTreeItem
        position relative
        padding-left 40px
        padding-top 10px
        &:before
            content ""
            display block
            border-top 1px solid #46b8da
            width 40px
            position absolute
            left 0
            margin-top 15px
        >p  
            position relative
            line-height 30px
            border 1px solid #46b8da
            color #1b809e
            background #fff
            z-index 1
            border-radius 3px
            white-space nowrap
            padding-left 20px
            padding-right 30px
            display inline-block
            cursor pointer
            margin 0
            overflow visible
            input
                border 0
                height 30px
                margin 0
                width 100px
                border-radius 0 
                border-left 1px solid #46b8da
                padding-left 5px
                &:focus
                    outline none
            input[name="description"]
                width 300px 
            .iconRight
                position absolute
                right 0px 
                color #fff
                top 0px
                height 100%
                width 30px
                line-height 30px
                text-align center
            .zLoadingIcon
                right 2px
                top 3px
            &:hover
                background #46b8da
                color #fff
                &:before
                    border-top 6px solid #fff
                &:after
                    border-top 12px solid #fff
                .zTreeControl
                    color #1b809e
            .zTreeControl
                position absolute
                left 100%
                padding-left 50px
                padding-top 5px
                display block
                color #1b809e
                height 32px
                top 0
                line-height 32px
                i 
                    margin 0 5px
                    font-size 16px
                    
        >p.zTreeEdit
            background #46b8da
            &:hover
                color #444
            &:before
                border-top 6px solid #fff
            &:after
                display none
            .icon-plus2, .icon-cog
                display none
        >p.zTreeAdd
            .icon-minus2 
                display block !important

    .zTreeItem.active>ul
        display block
    

    .treeTag>p
        animation treeTag 2s linear infinite normal
        
.zTree.zTreeOrganization  
    .zTreeItem>p 
        font-family 'icomoon'
        padding-left 30px
        border 1px solid transparent
        &:before
            border 0
            content "\e601" 
            position absolute
            top 0
            left 0px 
            height 100%
            width 28px
            line-height 28px
            font-size 24px
            color #46b8da
            transition font .3s
        &:hover
            background #fff
            color #46b8da
            &:before
                border 1px solid transparent
    .zTreeItem.hasMore
        >p 
            position relative
            &:before
                content "\e930"
                padding-top 0
                font-size 24px
                
    p.zTreeEdit
        border 1px solid #46b8da
        input[name=name]
            width 200px
        input[name=description]
            display none
        &:before
            color #fff
            padding-top 0
            margin-top 0
            margin-left 0
            padding-left 2px
            width 30px
        &:hover
            background #46b8da !important
            
    p.zTreeFolder
        &:before
            content "\e930"
            font-size 18px
            padding-left 6px
        
    

