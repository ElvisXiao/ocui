.zBuSelect 
    overflow hidden
    white-space nowrap
.mixSelectWrap
    padding-top 44px 
    .zTreeRoot>p 
        background-color #ccc
        color #fff !important
        font-weight bold
    >p
        margin 0
        position absolute
        top 0
        left 0
        width 100%
        padding 5px
        box-sizing border-box
        background-color #fff
        z-index 1
    >ul>li>p
        padding-left 5px !important
    ul
        list-style-type none
        padding 0
        margin 0
        li
            padding 0
            p
                position relative
                margin 0
                margin-bottom 1px
                line-height 24px
                cursor pointer
                font-size 12px
                color #333
            p:not(.active):hover 
                background-color #f3f3f3
            p.active
                color #fff
                background-color #3bb4f2
                &:after
                    content "\e620"
                    font-family icomoon
                    position absolute
                    right 10px 
                    top 1px
            p.disabled 
                cursor default 
                color #888
           
.buSlc
    display inline-block
    min-height 30px 
    display inline-block
    vertical-align top
    background-color #f3f3f3
    border 1px solid #ddd
    padding 4px
    box-sizing border-box
.buSlc .zBadge
    margin 0 1px
    background-color #3bb4f2
    color #fff 
    font-size 12px
    padding 2px 5px
    font-weight 400
    transform scale(.95)
    .icon-cancel-circle
        position relative
        top 1px 
        margin-right 5px
        cursor pointer