.zFileTableContainer
	overflow auto
.zFileTable
	margin 15px 0 0 0 !important
	width 100%
	font-size 12px 
	thead 
		backgroun #bc0ded 
		color #fff 
		th 
			text-align left 
			white-space nowrap
	th,td 
		padding 0 10px
		white-space nowrap
		max-width 300px
	td[data-val] 
		padding-top 0
		padding-bottom 0
		margin 0
		height 30px
		position relative
		input.tdIpt
			height 30px 
			width 100%
			display block
			background transparent
			border-radius 0
			border 1px solid transparent
			transition all .5s
			position absolute
			left 0
			right 0
			top 0
			bottom 0
			&:hover 
				border 1px dashed #aaa
			&:focus
				border 1px solid #E39A5F
				color #888
		.tdSpan
			visibility hidden
		
.zFileTableMark
	position relative
	color #d43f3a
	&:after
		content ""
		border-right 0
		border-left 15px solid transparent
		border-bottom 15px solid transparent
		border-top 15px solid #d43f3a
		position absolute
		top 0
		right 0
