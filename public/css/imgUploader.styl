.zImgUploader
    position relative
    line-height 1em
    display inline-block
    .zImgUploaderWrap
        position relative
        display inline-block
    .zImgUploaderFilter
        border 1px dashed #fff
        position absolute
        display block
        right 1px
        bottom 1px
        top 1px
        left 1px
        cursor move
        z-index 2
        i
            position absolute
            font-size 10px
            cursor ns-resize
            display block
            width 14px
            height 14px
        i.zCutDown
            left 50%
            margin-left -7px
            bottom -3px
            border-bottom 4px dashed #1751CC
        i.zCutUp
            left 50%
            margin-left -7px
            top -3px
            border-top 4px dashed #1751CC
        i.zCutLeft
            cursor ew-resize
            top 50%
            margin-top -7px
            left -3px
            border-left 4px dashed #1751CC
        i.zCutRight
            cursor ew-resize
            top 50%
            margin-top -7px
            right -3px
            border-right 4px dashed #1751CC
        