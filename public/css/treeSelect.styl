.zTreeSelect
	position relative
	left 0
	display inline-block
	&:after
		content ''
		display block 
		width 0
		height 0
		position absolute
		right 5px
		top 50%
		margin-top -3px
		border-top 6px solid #777
		border-bottom 6px solid transparent
		border-left 6px solid transparent
		border-right 6px solid transparent
	input
		font-size 12px
		padding-right 18px
	ul 
		margin 0
		list-style-type none
		padding 0
		li 
			p 
				margin 0
				font-size 12px
				line-height 26px
				cursor pointer
				transition all .2s
				white-space nowrap
				// &:hover
				// 	background #60ADFB
				// 	color #fff
				&:focus
					background #60ADFB
					color #fff
					outline none
		li.zTreeSelectItem.active>p
			background #60ADFB
			color #fff
			&[disabled]
				opacity 0.5
	>ul
		position absolute
		z-index 10000
		top 100%
		left 0
		right 0
		display none
		box-shadow 0 0 14px #666
		border 1px solid #aaa
		margin-left 0
		background #eee
		color #666
		transition all .5s
		box-shadow 0 1px 24px #aaa
		border 1px solid #aaa
		margin-left 0
		background #f1f1f1
		overflow auto
	
	p[disabled]
		color #999
		font-weight 400
		
		
.zTreeSelect.active
	&:after
		margin-top -9px
		border-top 6px solid transparent
		border-bottom 6px solid #777
	>ul 
		display block